<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <RadioButton 
        android:id="@+id/default_set"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_centerVertical="true"
        android:onClick="onRadioButtonClicked"/>
    
    <ImageView 
        android:id="@+id/launcher_logo"
        android:contentDescription="@+string/launcher_logo_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/default_set"
        android:layout_centerVertical="true"/>
    
    <ImageButton
        android:id="@+id/uninstall_button"
        android:contentDescription="@+string/uninstall_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:title="@+string/uninstall_button"
        android:src="@drawable/ic_action_discard"
        style="?android:attr/borderlessButtonStyle"/>
    
    <Button
        android:id="@+id/home_launch_button"
        android:contentDescription="@+string/home_launch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/launcher_logo"
        android:layout_toLeftOf="@id/uninstall_button"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        style="?android:attr/borderlessButtonStyle"/>
  
</RelativeLayout>
